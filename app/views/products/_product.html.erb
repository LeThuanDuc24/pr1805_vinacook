<div class="custom-col-5">
  <div class="product-wrapper mb-25">
    <div class="product-img">
      <a href="product-details" >
      <%= link_to product do %>
        <%= image_tag product.image || "product/product3.jpg" %>
      <% end %>
      <div class="product-action">
        <div class="pro-action-left">
          <a title="Add To Cart" href="#"><i class="ion-android-cart"></i> Add Tto Cart</a>
        </div>
        <div class="pro-action-right">
          <a title="Wishlist" href="wishlist.html"><i class="ion-ios-heart-outline"></i></a>
          <a title="Quick View" data-toggle="modal" data-target="#exampleModal" href="#"><i class="ion-android-open"></i></a>
        </div>
      </div>
    </div>
    <div class="product-content">
      <h4>
      </h4>
      <%= link_to product.name, product %>
      <div class="product-price-wrapper">
        <span><%= product.sale_price || "$100" %></span>
        <span class="product-price-old"><%= product.price || "$120" %> </span>
      </div>
    </div>
  </div>
</div>
